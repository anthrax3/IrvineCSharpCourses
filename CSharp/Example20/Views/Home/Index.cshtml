@model Example20.Models.FileViewModel


@{
    ViewData["Title"] = "Home Page";
}

<h2>Update with Files</h2> 
 
<form asp-action="Upload" enctype="multipart/form-data"> 
    <div class="form-horizontal"> 
        <h4>Upload</h4> 
        <hr /> 
        <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
        <div class="form-group"> 
            <label asp-for="File" class="col-md-2 control-label"></label> 
            <div class="col-md-10"> 
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger" />
            </div> 
        </div> 
        <div class="form-group"> 
            <label asp-for="Description" class="col-md-2 control-label"></label> 
            <div class="col-md-10"> 
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div> 
        </div>
        <div class="form-group"> 
            <div class="col-md-offset-2 col-md-10"> 
                <input type="submit" value="Save" class="btn btn-default" /> 
            </div> 
        </div> 
    </div> 
</form> 


@section Scripts {
    @Html.Partial("_ValidationScriptsPartial");
}