@model IEnumerable<Example19.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<h2>All Students</h2>

<p> 
    <a asp-controller="Student" asp-action="Create">Create New</a> 
</p> 

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            English Score
        </th>
        <th>
            Math Score
        </th>
        <th>
            
        </th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @item.FirstName
        </td>
        <td>
            @item.LastName
        </td>
        <td>
            @item.EnglishScore
        </td>
        <td>
            @item.MathScore
        </td>
        <td>
            <a asp-controller="Student" asp-action="Details" asp-route-id="@item.ID">[Details]</a>
            <a asp-controller="Student" asp-action="Edit" asp-route-id="@item.ID">[Edit]</a>
            <a asp-controller="Student" asp-action="Delete" asp-route-id="@item.ID">[Delete]</a>
        </td>
    </tr>
}
</table>
